{% block content %}


    {% if loggedIn %}

        <h1><span style="color:white">Welcome {{ name }}</span></h1>
        <br>
        <br>
        <br>
        <form action="/logout" method="post">
            <input type="submit" value="Logout"/>
        </form>

    {% else %}

